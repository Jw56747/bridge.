{
  "compileOnSave": true,
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "esnext",
    "outDir": "./src/renderer/scripts/",
    "rootDir": "./src/renderer/ts/",
    "composite": true,
    "removeComments": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": true,
    "strictFunctionTypes": true,

    /* Additional Checks */
    "esModuleInterop": false
  },
  "types": [
    "node"
  ]
}